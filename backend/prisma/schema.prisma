generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  image       String[]
  title       String
  description String
  price       Float
  category    String
  stock       Int
  rating      Float
  badge       String?

  @@map("products")
}